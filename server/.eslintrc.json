{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 4],
    "no-unused-vars": [
      "error",
      {
        // Ignore arguments starting with _
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "extends": "eslint:recommended"
}
